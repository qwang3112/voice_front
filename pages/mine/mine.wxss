/* pages/mine/mine.wxss */
@import "/pages/bottom_menu/bottom_menu.wxss";
page{
  background-color: #EFEFEF;
}

.scbg{
  background-color: #EFEFEF;
  width: 100%;
  height: 91%; 
  left: 0rpx;
  right: 0rpx;
  top: 0rpx;
  position: absolute;
}

.box{
  width: 100%;
  background-color: white;
  padding-top: 30rpx;
  border-bottom: 20rpx solid #EFEFEF;
}

.firstblock{
  height: 150rpx;
  width: 92%;
  margin-left: 4%;
  margin-right: 4%;
  display: flex;
  justify-content: flex-start;
  align-content: flex-start;
}

.touxiang{
  width: 130rpx;
  height: 130rpx;
}

.person{
  width: 75%;
  height: 130rpx;
  margin-left: 30rpx;
  margin-top: 30rpx;
}

.name{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  margin-top: 10rpx;
  font-size: 40rpx;
}

.time{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  margin-top: 20rpx;
}

.showname{
  font-size: 34rpx;
  color: #3F51B5;
  font-family: PingFangSC-regular;
  font-weight: bold;
}

.showtime{
  font-size: 25rpx;
  color: #5E5D5D;
  font-family: PingFangSC-regular;
}

.secondblock{
  margin-top: 10rpx;
  margin-left: 4%;
  margin-right: 4%;
  padding-bottom: 20rpx;
  border-bottom: 5rpx solid #BBBBBB;
}

.content{
  font-size: 33rpx;
  color: #101010;
  word-wrap : break-word;
  /* word-break: break-all; */
}

.thirdblock{
  height: 100rpx;
  margin-left: 4%;
  margin-right: 4%;
  display: flex;
  /* justify-content: center;
  align-items: center; */
}

.left{
  width: 25%;
  display: flex;
  /* justify-content: center; */
  align-items: center;
}

.like{
  /* margin-top: 20rpx; */
  margin-left: 20rpx;
  width: 40rpx;
  height: 40rpx;
}

.num{
  height: 52rpx;
  line-height: 50rpx;
  width: 150;
  margin-top: 25rpx;
  margin-left: 20rpx;
  font-size: 30rpx;
  color: #101010;
}

.personalInfo{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 50rpx;
  border-bottom: 10rpx solid #BBBBBB;
  background-color: white;
}

.nn{
  margin-top: 20rpx;
}

.deco{
  width: 200rpx;
  height: 200rpx;
}

.del{
  height: 70rpx;
  width: 100rpx;
  font-size: 30rpx;
  background-color: #FF2741;
  color: white;
  margin-left: 450rpx;
  margin-top: 15rpx;
  border-radius: 10rpx;
  display: flex; /*设置显示样式**/
  align-items: center; /**子view垂直居中*/
  justify-content: center; /**内容居中*/
  flex-direction: row;
}