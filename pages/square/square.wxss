/* pages/square/square.wxss */
@import "/pages/bottom_menu/bottom_menu.wxss";
/* @import "/pages/commit/commit.wxss"; */
page{
  background-color: #EFEFEF;
}

.scbg{
  background-color: #EFEFEF;
  width: 100%;
  height: 91%; 
  left: 0rpx;
  right: 0rpx;
  top: 0rpx;
  position: absolute;
}

.box{
  width: 100%;
  background-color: white;
  padding-top: 30rpx;
  border-bottom: 20rpx solid #EFEFEF;
}

.firstblock{
  height: 150rpx;
  width: 92%;
  margin-left: 4%;
  margin-right: 4%;
  display: flex;
  justify-content: flex-start;
  align-content: flex-start;
}

.touxiang{
  width: 130rpx;
  height: 130rpx;
}

.person{
  width: 75%;
  height: 130rpx;
  margin-left: 30rpx;
  margin-top: 30rpx;
}

.name{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  margin-top: 10rpx;
  font-size: 40rpx;
}

.time{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  margin-top: 20rpx;
}

.showname{
  font-size: 34rpx;
  color: #3F51B5;
  font-family: PingFangSC-regular;
  font-weight: bold;
}

.showtime{
  font-size: 25rpx;
  color: #5E5D5D;
  font-family: PingFangSC-regular;
}

.secondblock{
  margin-top: 10rpx;
  margin-left: 4%;
  margin-right: 4%;
  padding-bottom: 20rpx;
  border-bottom: 5rpx solid #BBBBBB;
}

.content{
  font-size: 33rpx;
  color: #101010;
  /* word-break: break-all; */
  word-wrap : break-word;
}

.thirdblock{
  height: 100rpx;
  margin-left: 4%;
  margin-right: 4%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.forthblock{
  /* margin-top: 10rpx; */
  margin-left: 6%;
  margin-right: 6%;
  padding-left: 20rpx;
  padding-bottom: 10rpx;
  /* border-bottom: 5rpx solid #BBBBBB; */
  background-color: white;
}

.like{
  /* margin-top: 20rpx; */
  margin-left: 20rpx;
  width: 40rpx;
  height: 40rpx;
}

.num{
  height: 52rpx;
  line-height: 50rpx;
  margin-top: 25rpx;
  margin-left: 20rpx;
  font-size: 30rpx;
  color: #101010;
}
.comment{
  margin-left: 40rpx;
  width: 50rpx;
  height: 50rpx;
}

.textarea{
  width: 100%;
  background-color: white;
  display: flex;
  flex-direction: column;
  justify-items: center;
  align-items: center;
}
.textInput{
  width: 96%;
  height: 200rpx;
  margin-left: 2%;
  margin-right: 2%;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  font-size: 33rpx;
  background-color: #F2F2F2;
}

.click{
  width: 30%;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 10rpx;
  margin: auto;
  margin-bottom: 30rpx;
  margin-left: 8%;
  margin-right: 8%;
  background-color: #F76968;
  text-align: center;
  color: white;
  font-size: 33rpx;
}